# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=5000
IP_ADDRESS=127.0.0.1
VERSION=1.0.0

# ============================================
# DATABASE CONFIGURATION
# ============================================
# MongoDB Connection String
# Format: mongodb://localhost:27017/law_firm_db (Local)
# Format:  (Atlas)
DATABASE_URL=mongodb://localhost:27017/law_firm_db

# ============================================
# REDIS CONFIGURATION
# ============================================
# Set to true to disable Redis caching
DISABLE_REDIS=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# JWT CONFIGURATION
# ============================================
# Generate secure random strings for production
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE_IN=30d
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production
JWT_REFRESH_EXPIRES_IN=365d

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Recommended: 10-12 for production
BCRYPT_SALT_ROUNDS=12

# ============================================
# EMAIL CONFIGURATION (SMTP)
# ============================================
# Gmail SMTP Settings (or your email provider)
# For Gmail: Enable 2FA and generate App Password
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=noreply@yourdomain.com

# ============================================
# ADMIN DEFAULT CREDENTIALS
# ============================================
# These credentials are used for initial admin account
ADMIN_NAME=Admin User
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=ChangeThisPassword123!

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
UPLOAD_FOLDER=./uploads
# 5MB in bytes
MAX_FILE_SIZE=5242880
# Comma-separated list of allowed file types
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/webp

# ============================================
# LOGGING CONFIGURATION
# ============================================
# Options: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=info

# ============================================
# CORS CONFIGURATION (Optional)
# ============================================
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:3000

# ============================================
# RATE LIMITING (Optional)
# ============================================
# Time window in milliseconds (15 minutes = 900000)
RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# FRONTEND URL (Optional)
# ============================================
# Used for email links and redirects
FRONTEND_URL=http://localhost:3000

# ============================================
# SOCKET.IO CONFIGURATION (Optional)
# ============================================
# SOCKET_CORS_ORIGIN=http://localhost:3000